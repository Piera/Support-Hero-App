<style>

td   {padding:50px;
      margin:50px}
tr   {padding:50px;
      margin:50px}

</style>

<p><%= @month %> Support Heros</p>

<table id='calendar'>
 <tr>
   <th>Sunday</th> <th>Monday</th>
   <th>Tuesday</th> <th>Wednesday</th>
   <th>Thursday</th> <th>Friday</th>
   <th>Saturday</th>
  </tr>
  <tr>

  <% @calendar.keys.sort.each do |date| %>
    <% if date.day == 1 %>
      <% date.wday.times do %> 
      <td class='offset'></td> 
      <% end %>
    <% end %>

    <% if date.wday == 0 %> </tr><tr> 
    <% end %>
      <td style = "padding:20px"> 
        <%= date.day %><br>
        <%= @calendar[date] %><br> 
      </td>
  <% end %>
  </tr>
</table>
